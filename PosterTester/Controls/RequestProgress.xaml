<UserControl x:Class="PosterTester.Controls.RequestProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosterTester.Controls"
             xmlns:converters="clr-namespace:PosterTester.Converters"
             xmlns:posterTester="clr-namespace:PosterTester"
             xmlns:data="clr-namespace:PosterLib.Data;assembly=PosterLib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance data:Request}"
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<converters:BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter"  True="Visible"   False="Collapsed" />
	</UserControl.Resources>
	<Grid
		Margin="6,0,0,0"
		Visibility="{Binding IsWorking, Converter={StaticResource VisibleIfTrueConverter}}"
	>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<ProgressBar Grid.Column="0" Margin="3" IsIndeterminate="True" MaxHeight="8" />
		<Button Grid.Column="1" Margin="3" Padding="3"
		        Background="Transparent"
		        BorderBrush="Transparent"
		        Command="posterTester:CustomCommands.Abort">
			X
		</Button>
	</Grid>
</UserControl>
