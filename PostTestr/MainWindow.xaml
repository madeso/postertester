<Window x:Class="PostTestr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:postTestr="clr-namespace:PostTestr" Icon="icon.ico"
        Title="PostTestr" Height="350" Width="525" Closing="MainWindow_OnClosing">
    <Window.CommandBindings>
        <CommandBinding Command="postTestr:CustomCommands.Exit" Executed="ExitExecuted"></CommandBinding>
        <CommandBinding Command="postTestr:CustomCommands.Execute" Executed="ExecuteExecuted"></CommandBinding>
        <CommandBinding Command="postTestr:CustomCommands.Login" Executed="LoginExecuted"></CommandBinding>
        <CommandBinding Command="postTestr:CustomCommands.Format" Executed="FormatExecuted"></CommandBinding>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="Q" Modifiers="Control" Command="postTestr:CustomCommands.Exit"></KeyBinding>
        <KeyBinding Key="L" Modifiers="Control" Command="postTestr:CustomCommands.Login"></KeyBinding>
        <KeyBinding Key="Return" Modifiers="Control" Command="postTestr:CustomCommands.Execute"></KeyBinding>
        <KeyBinding Key="F" Modifiers="Control" Command="postTestr:CustomCommands.Format"></KeyBinding>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Width="Auto" Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="Exit" Command="postTestr:CustomCommands.Exit" InputGestureText="Ctrl-Q" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Login" Command="postTestr:CustomCommands.Login" InputGestureText="Ctrl-L" />
                <MenuItem Header="Execute" Command="postTestr:CustomCommands.Execute" InputGestureText="Ctrl-Return" />
                <MenuItem Header="Format" Command="postTestr:CustomCommands.Format" InputGestureText="Ctrl-F" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <TextBlock Margin="10,10,0,0" Height="17" VerticalAlignment="Top" HorizontalAlignment="Left" Width="35">LGN</TextBlock>
            <TextBox Name="UiLogin" Margin="45,10,10,0" Height="17" VerticalAlignment="Top"></TextBox>
            
            <TextBlock Margin="10,32,0,0" Height="17" VerticalAlignment="Top" HorizontalAlignment="Left" Width="35" RenderTransformOrigin="2.771,7.706">URL</TextBlock>
            <TextBox Name="UiUrl" Margin="45,32,10,0" Height="17" VerticalAlignment="Top"></TextBox>
            
            <Grid Margin="10,54,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox Name="UiPost" AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">Post data</TextBox>
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                <TextBox Name="UiResponse" Grid.Column="2" AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">Response</TextBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
